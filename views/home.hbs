    </ul> 
    <ul>
        <table class="table table-dark table-sm"> 
            <thead> 
                <tr >
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Pictrue</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            {{#each Toys}}
            <tbody>
                <tr>
                    <td>{{_id}}</td>
                    <td>{{name}}</td>
                    <td>{{price}}</td>
                    <td><img src="{{picURL}}" width="300" height="200"/></td>
                    <td><a href="/edit?id={{_id}}">Edit</a></td>
                    <td><a onclick="return confirm('Are you sure????')" href="/delete?id={{_id}}">Delete</a></td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </ul>
    
